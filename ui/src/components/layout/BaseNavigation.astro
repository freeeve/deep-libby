---
interface Props {
  pageTitle?: string
}

const navigationItems = [
  { name: "Home", url: "/" },
  { name: "Search", url: "/search/" },
  { name: "Find", url: "/find/" },
  { name: "Compare", url: "/compare/" },
]

const { pageTitle } = Astro.props
---

<header
  class="border-b-4 border-deep-blue bg-teal text-yellow flex justify-between p-6 items-center"
>
  {pageTitle && <h1 class="hidden">{pageTitle}</h1>}
  <a href="/" title="Back to Home">
    <p class="righteous text-3xl md:text-5xl">Deep Library</p>
  </a>
  <nav class="hidden md:inline-block">
    <h2 class="hidden">Navigation</h2>
    <ul class="flex gap-8 poppins">
      {
        navigationItems.map((item) => (
          <li>
            <a
              class="text-lg font-medium hover:text-coral transition-all duration-150 ease-in-out"
              href={item.url}
              title={`Go to ${item.name}`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav class="md:hidden flex">
    <h2 class="hidden">Mobile Navigation</h2>
    <ul>
      <li><a href="/search/">Search</a></li>
    </ul>
  </nav>
</header>
